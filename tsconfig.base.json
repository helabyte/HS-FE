{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@hela/survey-ui": ["packages/survey-ui/src/index.ts"],
      "@hela/survey-ui/components": [
        "packages/survey-ui/components/src/index.ts"
      ],
      "@hela/survey-ui/features": ["packages/survey-ui/features/src/index.ts"],
      "@hela/survey-ui/services": ["packages/survey-ui/services/src/index.ts"],
      "@hela/survey-ui/types": ["packages/survey-ui/types/src/index.ts"],
      "@hela/survey-ui/utils": ["packages/survey-ui/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
